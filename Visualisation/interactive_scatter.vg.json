{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 400,
    "background": "#FFF5EE",
    "data": {
        "url": "https://raw.githubusercontent.com/actaeon02/FIT3179/main/Visualisation/Dataset.csv"
    },
    "params": [
        {
            "name": "year_filter",
            "value": 1980,
            "bind": {
                "input": "range",
                "min": 1980,
                "max": 2016,
                "step": 1,
                "name": "Select Year "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.YEAR == year_filter"
        },
        {
            "calculate": "(datum.TOTAL_CRIME + 0.1) / datum.POPULATION * 10000", "as": "Crime Rate"
        },
        {
            "calculate": "format(datum['Crime Rate'], '.2f') + ' crimes per 10,000 people'",
            "as": "Crime Rates"
        },
        {
            "calculate": "format(datum.POPULATION, ',d') + ' People'", "as": "Population"
        },
        {
            "calculate": "format(datum.DENSITY, '.2f') + ' (People / KM2)'", "as": "Density"
        },
        {
            "calculate": "datum.UNEMPLOYMENT + '%'", "as": "Unemployment Rate"
        },
        {
          "filter": "datum.UNEMPLOYMENT < 10 & datum['Crime Rate'] > 1"
        }
    ],
    "encoding": {
        "x": {
            "field": "UNEMPLOYMENT",
            "type": "quantitative",
            "title": "Unemployment Rate",
            "scale": {
                "domain": [0.5, 10]
            },
            "axis": {
              "tickCount": 4
            }
        },
        "y": {
            "field": "Crime Rate",
            "type": "quantitative",
            "title": "Crime Rate",
            "scale": {
                "domain": [0, 1200]
            },
            "axis": {
              "tickCount": 4
            }
        }
    },
    "layer": [
        {
            "params": [
              {
              "name": "grid",
              "select": "interval",
              "bind": "scales"
              },
              {
              "name": "state_highlight",
              "select": {"type": "point", "fields": ["REGION"]},
              "bind": "legend"
              },
              {
              "name": "highlight",
              "select": {"type": "point", "on": "mouseover"}
              }
            ],
            "mark": {
              "type": "circle",
              "stroke": "black",
              "strokeWidth": 1
            },
            "encoding": {
                "size": {
                    "field": "DENSITY",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [100, 200, 500, 1000],
                        "range": [100, 200, 300, 400, 600]
                    },
                    "condition": {
                      "param": "highlight",
                      "empty": false,
                      "value": 500
                    }
                },
                "color": {
                    "field": "REGION",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "West Malaysia",
                            "East Malaysia"
                        ],
                        "range": [
                            "#e6550d",
                            "#4682B4"
                        ]

                    }
                },
                "opacity": {
                    "condition": {
                        "param": "state_highlight",
                        "value": 0.9
                    },
                    "value": 0.2
                },
                "strokeOpacity": {
                  "condition": [
                    {
                      "param": "highlight",
                      "empty": false,
                      "value": 1
                    }
                  ],
                  "value": 0
                },
                "tooltip": [
                    {"field": "STATES", "type": "nominal", "title": "State"},
                    {"field": "Population", "type": "nominal"},
                    {"field": "Density", "type":"nominal"},
                    {"field": "Crime Rates", "type":"nominal"},
                    {"field": "Unemployment Rate", "type":"nominal"}
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "center",
                "baseline": "middle",
                "dy": -15,
                "fontSize": 11.5,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {
                    "field": "STATES",
                    "type": "nominal"
                },
                "color": {
                    "value": "black"
                },
                "opacity": {
                    "condition": {
                        "test": "(datum.STATES == 'Selangor' || datum.STATES == 'Penang' || datum.STATES == 'Sabah' || datum.STATES == 'Sarawak') & datum.UNEMPLOYMENT < 10 & datum['Crime Rate'] > 1",
                        "value": 1
                    },
                    "value": 0
                }
            }
        }
    ],
    "config": {
        "view": {
            "stroke": null
        }
    }
}