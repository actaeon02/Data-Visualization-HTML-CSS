{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 400,
    "title": {
        "text": "Unemployment Rate vs Crime Rate",
        "fontSize": 20
    },
    "data": {
        "url": "https://raw.githubusercontent.com/actaeon02/FIT3179/main/Visualisation/Dataset.csv"
    },
    "params": [
        {
            "name": "year_filter",
            "value": 1980,
            "bind": {
                "input": "range",
                "min": 1980,
                "max": 2016,
                "step": 1,
                "name": "Select Year "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.YEAR == year_filter"
        },
        {
            "calculate": "(datum.TOTAL_CRIME + 0.1) / datum.POPULATION * 10000", "as": "Crime Rate"
        },
        {
            "calculate": "format(datum['Crime Rate'], '.2f') + ' crimes per 10,000 people'",
            "as": "Crime Rates"
        },
        {
            "calculate": "format(datum.POPULATION, ',d') + ' People'", "as": "Population"
        },
        {
            "calculate": "format(datum.DENSITY, '.2f') + ' (People / KM2)'", "as": "Density"
        },
        {
            "calculate": "datum.UNEMPLOYMENT + '%'", "as": "Unemployment Rate"
        }
    ],
    "encoding": {
        "x": {
            "field": "UNEMPLOYMENT",
            "type": "quantitative",
            "title": "Unemployment Rate",
            "scale": {
                "domain": [0.5, 10]
            }
        },
        "y": {
            "field": "Crime Rate",
            "type": "quantitative",
            "title": "Crime Rate",
            "scale": {
                "domain": [0, 1200]
            }
        }
    },
    "layer": [
        {
            "mark": "circle",
            "encoding": {
                "size": {
                    "field": "DENSITY",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [100, 200, 500, 1000],
                        "range": [100, 200, 300, 400, 600]
                    }
                },
                "color": {
                    "field": "REGION",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "West Malaysia",
                            "East Malaysia"
                        ],
                        "range": [
                            "#d62728",
                            "#9467bd"
                        ]

                    }
                },
                "opacity": {
                    "condition": {
                        "test": "datum.UNEMPLOYMENT > 10 | datum['Crime Rate'] < 1",
                        "value": 0
                    },
                    "value": 0.7
                },
                "tooltip": [
                    {"field": "STATES", "type": "nominal", "title": "State"},
                    {"field": "Population", "type": "nominal"},
                    {"field": "Density", "type":"nominal"},
                    {"field": "Crime Rates", "type":"nominal"},
                    {"field": "Unemployment Rate", "type":"nominal"}
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "center",
                "baseline": "middle",
                "dy": -15,
                "fontSize": 11.5,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {
                    "field": "STATES",
                    "type": "nominal"
                },
                "color": {
                    "value": "black"
                },
                "opacity": {
                    "condition": {
                        "test": "datum.STATES == 'Selangor' || datum.STATES == 'Penang' || datum.STATES == 'Sabah' || datum.STATES == 'Sarawak'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        }
    ],
    "config": {
        "view": {
            "stroke": null
        }
    }
}