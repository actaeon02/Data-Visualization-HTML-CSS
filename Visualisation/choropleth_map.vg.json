{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 400,
  "background": "#FFF5EE",
  "data": {
    "url": "https://raw.githubusercontent.com/actaeon02/FIT3179/main/Visualisation/malaysia-states.topojson",
    "format": {"type": "topojson", "feature": "states"}
  },
  "projection": {"type": "equirectangular"},
  "layer":[
    {
      "transform": [
        {"calculate": "'Data is not available in ' + datum.properties.Name", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "darkgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.Name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/actaeon02/FIT3179/main/Visualisation/Normalized.csv"
            },
            "key": "STATES",
            "fields": ["POPULATION", "DENSITY", "TOTALCRIME", "UNEMPLOYMENT", "LAT", "LONG"]
          }
        },
        {
          "calculate": "(datum.TOTALCRIME + 0.1) / datum.POPULATION * 10000", "as": "Crime Rate"},
        {
          "calculate": "format(datum['Crime Rate'], '.2f') + ' crimes per 10,000 people'",
          "as": "Crime Rates"
        },
        {
          "calculate": "format(datum.POPULATION, ',d') + ' People'", "as": "Population"
        },
        {
          "calculate": "datum.DENSITY + ' (People / KM2)'", "as": "Density"
        },
        {
          "calculate": "datum.UNEMPLOYMENT + '%'", "as": "Unemployment Rate"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "DENSITY",
          "type": "quantitative",
          "scale": {
            "type": "log",
            "domain": [20, 100, 200, 1000],
            "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
          },
          "legend": {
            "title": "Density",
            "titleColor": "black"
        }
      },
        "tooltip": [
          {"field": "properties.Name", "type": "nominal", "title": "States"},
          {"field": "Population", "type": "nominal"},
          {"field": "Density", "type":"nominal"},
          {"field": "Crime Rates", "type":"nominal"},
          {"field": "Unemployment Rate", "type":"nominal"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/actaeon02/FIT3179/main/Visualisation/Normalized.csv"
      },
      "encoding": {
        "longitude": {
          "field": "LONG",
          "type": "quantitative"
        },
        "latitude": {
          "field": "LAT",
          "type": "quantitative"
        }
      },
      "layer": [
      {
        "mark": {
          "type": "circle",
          "color": "#A0522D"
        },
        "encoding": {
            "opacity": {
                "condition": {
                    "test": "datum.STATES == 'Sarawak' || datum.STATES == 'Sabah' || datum.STATES == 'Johor' || datum.STATES == 'Pahang'",
                    "value": 1
                },
                "value": 0
            },
            "size": {
              "value": 40
            }
        }
      }, {
        "mark": {
            "type": "text",
            "baseline": "middle",
            "dy": -12,
            "fontSize": 19,
            "fontStyle": "italic",
            "fontWeight": "bold"
        },
        "encoding": {
          "text": {"field": "STATES", "type": "nominal"},
          "color": {"value": "#4A0404"},
          "opacity": {
            "condition": {
                "test": "datum.STATES == 'Sarawak' || datum.STATES == 'Sabah' || datum.STATES == 'Johor' || datum.STATES == 'Pahang'",
                "value": 1
            },
            "value": 0
          },
          "size": {
            "value": 15
          }
        }
      }
      ]
    }
  ],
  "config": {
    "style": {
        "cell": {
            "stroke": "transparent"
        }
    }
  }
}
