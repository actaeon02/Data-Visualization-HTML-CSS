{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Malaysia's Summary of Socioeconomic Insights",
    "fontSize": 20
  },
  "width": "container",
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/actaeon02/FIT3179/main/Visualisation/malaysia-states.topojson",
    "format": {"type": "topojson", "feature": "states"}
  },
  "projection": {"type": "equirectangular"},
  "layer":[
    {
      "transform": [
        {"calculate": "'Data is not available in ' + datum.properties.Name", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.Name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/actaeon02/FIT3179/main/Visualisation/Normalized.csv"
            },
            "key": "STATES",
            "fields": ["POPULATION", "DENSITY", "TOTALCRIME", "UNEMPLOYMENT"]
          }
        },
        {
          "calculate": "(datum.TOTALCRIME + 0.1) / datum.POPULATION * 10000", "as": "Crime Rate"},
        {
          "calculate": "format(datum['Crime Rate'], '.2f') + ' crimes per 10,000 people'",
          "as": "Crime Rates"
        },
        {
          "calculate": "format(datum.POPULATION, ',d') + ' People'", "as": "Population"
        },
        {
          "calculate": "datum.DENSITY + ' (People / KM2)'", "as": "Density"
        },
        {
          "calculate": "datum.UNEMPLOYMENT + '%'", "as": "Unemployment Rate"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "DENSITY",
          "type": "quantitative",
          "scale": {
            "type": "log",
            "domain": [20, 100, 200, 1000],
            "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
          },
          "legend": {
            "title": "Density",
            "titleColor": "black"
        }
      },
        "tooltip": [
          {"field": "properties.Name", "type": "nominal", "title": "States"},
          {"field": "Population", "type": "nominal"},
          {"field": "Density", "type":"nominal"},
          {"field": "Crime Rates", "type":"nominal"},
          {"field": "Unemployment Rate", "type":"nominal"}
        ]
      }
    },
    {
        "mark": {
            "type": "text",
            "baseline": "middle",
            "dy": -10,
            "fontSize": 11,
            "fontStyle": "italic",
            "color": "#A0522D",
            "fontWeight": "bolder"
        },
        "encoding": {
            "latitude": {"field": "LAT", "type": "quantitative"},
            "longitude": {"field": "LONG", "type": "quantitative"},
            "text": {"field": "properties.Name", "type": "nominal"},
            "opacity": {
            "condition": {
                "test": "datum.properties.Name == 'Sarawak' || datum.properties.Name == 'Sabah' || datum.properties.Name == 'Pahang' || datum.properties.Name == 'Johor' || datum.properties.Name == 'Perak'",
                "value": 1
                },
                "value": 0
            }
        }
    },
    {
        "mark": {
            "type": "circle",
            "baseline": "middle",
            "color": "#A0522D"
        },
        "encoding": {
            "latitude": {"field": "LAT", "type": "quantitative"},
            "longitude": {"field": "LONG", "type": "quantitative"},
            "opacity": {
            "condition": {
                "test": "datum.properties.Name == 'Sarawak' || datum.properties.Name == 'Sabah' || datum.properties.Name == 'Pahang' || datum.properties.Name == 'Johor' || datum.properties.Name == 'Perak'",
                "value": 1
                },
                "value": 0
            }
        }
    }
  ]
}
